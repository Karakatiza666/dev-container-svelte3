{
  "name": "svelte-app",
  "private": false,
  "version": "1.0.0",
  "description": "creating an easily shareable base Svelte 3 development environment",
  "author": "Tim Goshinski <tim@code-chimp.com>",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-chimp/dev-container-svelte3"
  },
  "scripts": {
    "build": "rollup -c",
    "autobuild": "rollup -c -w",
    "dev": "run-p start:dev autobuild",
    "start": "sirv public",
    "start:dev": "sirv public --dev",
    "lint": "eslint \"src/**/*.{js,svelte}\" --quiet",
    "clean": "del-cli public/bundle.*",
    "format": "prettier \"src/**/*.{js,svelte}\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions",
    "last 2 FirefoxAndroid versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 Edge versions",
    "last 2 Opera versions",
    "last 2 OperaMobile versions"
  ],
  "devDependencies": {
    "del-cli": "^3.0.1",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.21.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "set-value": ">=3.0.2",
    "sirv-cli": "^1.0.3",
    "svelte": "^3.24.0",
    "ws": "^7.3.1"
  }
}
